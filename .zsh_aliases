# function to avoid spambots scraping the email address
function joegrossberg {
  USER=joegross
  DOMAIN=joegrossberg.com
  ssh $USER"@"$DOMAIN;
}

# Make directory and change into it.
function mcd() {
  mkdir -p "$1" && cd "$1";
}

# Quickly find process info matching a string
function psgrep() {
  ps axu | grep -v grep | grep "$@" -i --color=auto;
}

# Complete g like git
compdef g=git

# other git ones
function gitbranch {
  git checkout -b "$1";
  git push -u origin "$1";
}
#alias gitlg='git log --graph --pretty=format:'\''%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen%cn%Creset %Cblue%cr%Creset'\'' --abbrev-commit --date=relative'
alias gitlog="git log --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit"

# Found here: https://github.com/mattsacks/dotfiles/blob/master/zshrc
function ffind() {
    find . -type f -iname "*${1}*";
}
function pbcat() {
    cat ${1} | pbcopy
}

function tgz() {
    tar -pcz ${1} > ${1}.tgz
}
