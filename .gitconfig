[core]
  bare = false
  editor = emacs -q -l ~/git-init-file.el
  filemode = true
  ignorecase = false
  logallrefupdates = true
  pager = delta --dark
  repositoryformatversion = 0
[color]
  branch = auto
  diff = auto
  interactive = auto
  status = auto
[color "branch"]
  current = yellow reverse
  local = yellow
  remote = green
[color "diff"]
  frag = magenta bold
  meta = yellow bold
  new = green bold
  old = red bold
[color "status"]
  added = yellow
  changed = green
  untracked = cyan
[alias]
  # If the alias expansion is prefixed with an exclamation point, it will be treated as a shell command.
  # If you want to run an external command, rather than a Git subcommand, start the command with a ! character
  branches = for-each-ref --count=10 --sort=-committerdate --format=\"%(color:blue)%(authordate:relative)\t%(color:red)%(authorname)\t%(color:white)%(color:bold)%(refname:short)\" refs/remotes
  cane = commit --amend --no-edit
  commend = commit --amend --no-edit
  ci = commit
  co = checkout
  credit = blame
  di = diff
  dw = diff --color-words
  difflog = log -p
  last = log -1 HEAD
  lg = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr)%Creset' --abbrev-commit --date=relative
  praise = blame
  st = status
  uncommit= reset --soft HEAD^
  undo = reset HEAD~1 --mixed
[apply]
  whitespace = nowarn
[diff]
  colorMoved = default
[push]
  default = current
[pull]
  rebase = true
[github]
  site = https://github.com
  endpoint = https://api.github.com
  oauth-token = SECRET
  username = josephgrossberg
[user]
  name = Joe Grossberg
  email = josephgrossberg+github@gmail.com
  initials = JG
[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true

