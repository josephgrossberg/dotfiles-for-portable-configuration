[core]
	repositoryformatversion = 0
	filemode = true
	bare = false
	logallrefupdates = true
	pager = cat
[color]
	diff = auto
	status = auto
	branch = auto
[color "branch"]
	current = yellow reverse
	local = yellow
	remote = green
[color "diff"]
	meta = yellow bold
  	frag = magenta bold
  	old = red bold
  	new = green bold
[color "status"]
	added = yellow
	changed = green
	untracked = cyan
[alias]
	di = diff
	st = status
	ci = commit
	co = checkout
    lc = log ORIG_HEAD.. --stat --no-merges
    lg = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr)%Creset' --abbrev-commit --date=relative
[user]
	name = Joe Grossberg
	email = joegrossberg@gmail.com
[apply]
	whitespace = nowarn
[push]
	default = matching
